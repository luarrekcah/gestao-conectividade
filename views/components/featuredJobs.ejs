<section class="featured-job-area feature-padding">
    <div class="container">
        <!-- Section Tittle -->
        <div class="row">
            <div class="col-lg-12">
                <div class="section-tittle text-center">
                    <span>Ofertas Recentes</span>
                    <h2>Featured Jobs</h2>
                </div>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-xl-10">
                <% jobs.forEach((item, i)=> { %>
                    <!-- single-job-content -->
                    <% if(!item.featured) return; %>
                        <div class="single-job-items mb-30">
                            <div class="job-items">
                                <div class="company-img">
                                    <a href="/jobs/<%=item.id%>/detalhes"><img width="85" height="85" src="<%=item.author.logoURL%>" alt=""></a>
                                </div>
                                <div class="job-tittle">
                                    <a href="/jobs/<%=item.id%>/detalhes">
                                        <h4>
                                            <%=item.title%>
                                        </h4>
                                    </a>
                                    <ul>
                                        <li>
                                            <%=item.author.name%>
                                        </li>
                                        <li><i class="fas fa-map-marker-alt"></i>
                                            <%=item.location.city%>, <%=item.location.state%>
                                        </li>
                                        <li>
                                            <%=item.priceOffer%>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                            <div class="items-link f-right">
                                <a href="/jobs/<%=item.id%>/detalhes">
                                    <%=item.jobNature%>
                                </a>
                                <span>
                                    <script>
                                        document.write(moment("<%=item.postedDate%>").fromNow());
                                    </script>
                                </span>
                            </div>
                        </div>
                        <% }); %>
            </div>
        </div>
    </div>
</section>